<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_main_container_d"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_top_container_d"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_container_d"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="618"
        android:elevation="2dp"
        android:orientation="vertical"
        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_bottom_container_d"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        android:elevation="2dp"
        android:orientation="vertical"></RelativeLayout>
</LinearLayout>