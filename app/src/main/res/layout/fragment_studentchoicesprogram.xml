<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo500"
    android:columnCount="2"
    android:rowCount="3">

    <Button
        android:id="@+id/arts_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:background="@drawable/button_red"
        android:onClick="clickStudentProgramButton"
        android:text="艺术类"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/science_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:background="@drawable/ic_group_black_24dp"
        android:onClick="clickStudentProgramButton"
        android:text="Science"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/engineering_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:background="@drawable/button_purple"
        android:onClick="clickStudentProgramButton"
        android:text="工程类"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/business_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:background="@drawable/button_pink"
        android:onClick="clickStudentProgramButton"
        android:text="商科"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/laws_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@drawable/button_green"
        android:onClick="clickStudentProgramButton"
        android:text="法学"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/medical_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@drawable/button_amber"
        android:onClick="clickStudentProgramButton"
        android:text="医学"
        android:textColor="@color/white" />

</GridLayout>
