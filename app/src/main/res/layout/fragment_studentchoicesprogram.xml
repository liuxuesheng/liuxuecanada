<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo500"
    android:columnCount="2"
    android:rowCount="5">

    <TextView
        android:id="@+id/select_program_textview"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_rowWeight="1.3"
        android:onClick="clickStudentProgramButton"
        android:text="Select Program"
        android:textColor="@color/white"
        android:textSize="32dip" />

    <Button
        android:id="@+id/arts_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:background="@drawable/button_red"
        android:onClick="clickStudentProgramButton"
        android:text="Arts"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/science_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:background="@drawable/button_blue"
        android:onClick="clickStudentProgramButton"
        android:text="Science"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/engineering_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@color/Purple500"
        android:onClick="clickStudentProgramButton"
        android:text="Engineering"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/business_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:background="@color/Pink500"
        android:onClick="clickStudentProgramButton"
        android:text="Business"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/laws_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:background="@color/Green500"
        android:onClick="clickStudentProgramButton"
        android:text="laws"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/medical_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:background="@color/Amber500"
        android:onClick="clickStudentProgramButton"
        android:text="Medical"
        android:textColor="@color/white" />

    <Space
        android:id="@+id/select_program_space"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:layout_rowWeight="1.3" />
</GridLayout>
