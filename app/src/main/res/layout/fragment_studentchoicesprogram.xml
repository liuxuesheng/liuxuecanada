<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/Indigo300"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topTextString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择方向"
            android:textColor="@color/white"
            android:textSize="32dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressbarid"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/circular" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="progress" />
        </RelativeLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.618"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">

        <Button
            android:id="@+id/arts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/button_red"
            android:onClick="clickProgramButton"
            android:text="艺术类"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/science_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/ic_group_black_24dp"
            android:onClick="clickProgramButton"
            android:text="Science"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/engineering_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_purple"
            android:onClick="clickProgramButton"
            android:text="工程类"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/business_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_pink"
            android:onClick="clickProgramButton"
            android:text="商科"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/laws_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/button_green"
            android:onClick="clickProgramButton"
            android:text="法学"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/medical_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/button_amber"
            android:onClick="clickProgramButton"
            android:text="医学"
            android:textColor="@color/white" />
    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/Indigo300"
        android:orientation="horizontal">

        <Button
            android:id="@+id/proceed_studentchoices_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/button_green"
            android:onClick="clickProceedButton"
            android:text="继续"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
