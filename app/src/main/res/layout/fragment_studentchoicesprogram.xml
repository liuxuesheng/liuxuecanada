<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    android:background="@color/Indigo500"
    >

    <TextView
        android:id="@+id/select_program_textview"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_rowWeight="1.3"
        android:onClick="clickStudentProgramButton"
        android:text="Select Program"
        android:textSize="32dip" />

    <Button
        android:id="@+id/arts_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:background="@drawable/button_red"
        android:onClick="clickStudentProgramButton"
        android:text="Arts" />

    <Button
        android:id="@+id/science_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:onClick="clickStudentProgramButton"
        android:text="Science"
        android:background="@color/Blue500"/>

    <Button
        android:id="@+id/engineering_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="clickStudentProgramButton"
        android:text="Engineering"
        android:background="@color/Purple500"/>

    <Button
        android:id="@+id/business_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="clickStudentProgramButton"
        android:text="Business"
        android:background="@color/Pink500"/>

    <Button
        android:id="@+id/laws_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="clickStudentProgramButton"
        android:text="laws"
        android:background="@color/Green500"/>

    <Button
        android:id="@+id/medical_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="clickStudentProgramButton"
        android:text="Medical"
        android:background="@color/Amber500"/>

    <Space
        android:id="@+id/select_program_space"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1.3" />
</GridLayout>
