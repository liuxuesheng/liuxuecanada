<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/Grey100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Grey200"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/goto_news_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Grey200"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/goto_news_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/goto_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="首页" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goto_profile_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Grey200"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/goto_profile_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account_box_black_24dp" />

            <TextView
                android:id="@+id/goto_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="足迹" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goto_suggestions_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Grey200"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/goto_suggestions_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter_drama_black_24dp" />

            <TextView
                android:id="@+id/goto_suggestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="规划" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goto_messages_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Grey200"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/goto_messages_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message_black_24dp" />

            <TextView
                android:id="@+id/goto_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="互联" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>