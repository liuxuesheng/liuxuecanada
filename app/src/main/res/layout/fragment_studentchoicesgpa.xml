<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo500"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/Indigo300"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_toefl_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GPA成绩"
            android:textColor="@color/white"
            android:textSize="32dip" />

        <ProgressBar
            android:id="@+id/yourId"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.618"
        android:background="@color/Indigo500"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_ieltsscore_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="score"
            android:textColor="@color/white"
            android:textSize="32dip"
            android:layout_weight="0.5"/>


        <SeekBar
            android:id="@+id/intensitySlider2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/Indigo300"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_studentchoicesgpa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/button_green"
            android:onClick="clickTOEFLProceedButton"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/proceed_studentchoicesgpa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@drawable/button_green"
            android:onClick="clickTOEFLProceedButton"
            android:text="Proceed"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>