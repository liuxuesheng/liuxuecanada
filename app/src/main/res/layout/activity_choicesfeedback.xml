<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/getTextViewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice feedback!!"/>

    <Button
        android:id="@+id/getFeedBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Feedback"
        android:layout_centerHorizontal="true"
        android:onClick="display"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/getFeedBackButton"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/choices_feedback_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/getFeedBackButton">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
