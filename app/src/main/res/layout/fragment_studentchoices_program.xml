<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.618"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3">

        <Button
            android:id="@+id/arts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="艺术类"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/science_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="理科"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/engineering_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="工程类"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/business_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="商科"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/laws_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="法学"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/medical_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#00ffffff"
            android:onClick="clickProgramButton"
            android:text="医学"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </GridLayout>

</LinearLayout>
