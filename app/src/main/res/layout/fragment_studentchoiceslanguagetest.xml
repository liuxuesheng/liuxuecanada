<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo500"
    android:columnCount="2"
    android:rowCount="5">

    <TextView
        android:id="@+id/select_languagetest_textview"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_rowWeight="1.3"
        android:text="选择语言考试"
        android:textColor="@color/white"
        android:textSize="32dip" />

    <Button
        android:id="@+id/toefl_button"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:background="@drawable/button_green"
        android:onClick="clickTOEFLButton"
        android:text="托福"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ielts_button"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:background="@drawable/button_amber"
        android:onClick="clickIELTSButton"
        android:text="雅思"
        android:textColor="@color/white" />

    <Space
        android:id="@+id/select_program_space"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:layout_rowWeight="1.3" />
</GridLayout>
